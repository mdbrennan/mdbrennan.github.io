{{!< default}}

<header>  
    <h1>{{@blog.title}}</h1>

</header>

{{! The main content area on the homepage }}

<main class="content {{post_class}}" role="main">
        <!-- Page content -->
        {{! Each post will be output using this markup }}
        {{#foreach posts}}

            {{> post-section}}

        {{/foreach}}

        <aside role="complementary">
        <!-- Secondary content -->
            <nav>
                <ul>
                    {{#foreach posts}}
                        {{> post-list}}
                    {{/foreach}}
                </ul>
            </nav>
        </aside>
</main>        

